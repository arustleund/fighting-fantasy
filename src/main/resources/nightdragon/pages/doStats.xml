<page
	xmlns="http://www.rustleund.com/fighting-fantasy/page"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
	xsi:schemaLocation="http://www.rustleund.com/fighting-fantasy/page https://github.com/arustleund/fighting-fantasy/raw/master/docs/page.xsd">
	<pagetext>
		<html>
			<p>
			<img src="images/nightdragon.gif" />
			</p>
			<p>
			You can only increase two stats. You cannot increase a stat twice.
			</p>
			<p>
				<ul>
					<li><a href="http://domulti:3">Re-roll initial stats</a></li>
					<li><a href="http://domulti:0">Add 1 to Skill</a></li>
					<li><a href="http://domulti:1">Add 1 to Luck</a></li>
					<li><a href="http://domulti:2">Add 2 to Stamina</a></li>
				</ul>
			</p>
		</html>
	</pagetext>
	<immediate>
		<initPlayer />
		<setFlag id="7" value="false" />
		<setFlag id="8" value="false" />
		<setFlag id="9" value="false" />
	</immediate>
	<multicommand id="0">
		<testStat stat="skill" atLeast="12">
			<successful />
			<unsuccessful>
				<testFlag id="7">
					<successful />
					<unsuccessful>
						<adjustScale type="skill" amount="1" adjustInitialValue="true" />
						<adjustScale type="skill" amount="1" />
						<setFlag id="7" value="true" />
						<testAnyFlag ids="8,9">
							<successful>
								<link page="intro" />
							</successful>
							<unsuccessful />
						</testAnyFlag>
					</unsuccessful>
				</testFlag>
			</unsuccessful>
		</testStat>
	</multicommand>
	<multicommand id="1">
		<testStat stat="luck" atLeast="12">
			<successful />
			<unsuccessful>
				<testFlag id="8">
					<successful />
					<unsuccessful>
						<adjustScale type="luck" amount="1" adjustInitialValue="true" />
						<adjustScale type="luck" amount="1" />
						<setFlag id="8" value="true" />
						<testAnyFlag ids="7,9">
							<successful>
								<link page="intro" />
							</successful>
							<unsuccessful />
						</testAnyFlag>
					</unsuccessful>
				</testFlag>
			</unsuccessful>
		</testStat>
	</multicommand>
	<multicommand id="2">
		<testFlag id="9">
			<successful />
			<unsuccessful>
				<adjustScale type="stamina" amount="2" adjustInitialValue="true" />
				<adjustScale type="stamina" amount="2" />
				<setFlag id="9" value="true" />
				<testAnyFlag ids="7,8">
					<successful>
						<link page="intro" />
					</successful>
					<unsuccessful>
						<testStat stat="skill" atLeast="12">
							<successful>
								<testStat stat="luck" atLeast="12">
									<successful>
										<link page="intro" />
									</successful>
									<unsuccessful />
								</testStat>
							</successful>
							<unsuccessful />
						</testStat>
					</unsuccessful>
				</testAnyFlag>
			</unsuccessful>
		</testFlag>
	</multicommand>
	<multicommand id="3">
		<link page="doStats" />
	</multicommand>
</page>